@model LojaNet.Models.Cliente

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>
<h4>Confirma a exclusão desse cliente?</h4>

<p> @Model.Nome</p>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <hr />
    <a href="/Cliente/Index" class="btn btn-default">Voltar</a>
    <input type="submit" value="Excluir" class="btn btn-danger" />
</form>
