@model LojaNet.Models.Produto

@{
    ViewBag.Title = "Detalhes";
}

<h2>Dados do Cliente</h2>

<dl>
    <dt>Nome:</dt>
    <dd>@Model.Nome</dd>

    <dt>Preco:</dt>
    <dd>@Model.Preco</dd>

    <dt>Estoque:</dt>
    <dd>@Model.Estoque</dd>

    <div>
        @Html.ActionLink("Voltar", "Index", new {  }) |
        @Html.ActionLink("Alterar", "Alterar", new { id=@Model.Id }) |
        @Html.ActionLink("Deletar", "Excluir", new {  id=@Model.Id })
    </div>

</dl>
