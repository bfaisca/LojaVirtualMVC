@model LojaNet.Models.Produto

@{
    ViewData["Title"] = "Incluir";
}

<h1>Incluir</h1>

<h4>Produto</h4>
<hr />
<form method="post">

    @Html.ValidationSummary(null,new { @class = "text-danger"})

    <div class="form-group">
        <label class="control-label" for="Nome">Nome:</label>
        <input class="form-control" type="text" name="Nome" value="@Model.Nome" />
    </div>

    <div class="form-group">
        <label class="control-label" for="Preco">Preço:</label>
        <input class="form-control" type="number" name="Preco" value="@Model.Preco" />
    </div>

    <div class="form-group">
        <label class="control-label" for="Estoque">Estoque:</label>
        <input class="form-control" type="number" name="Estoque" value="@Model.Estoque" />
    </div>

    <div class="form-group">
        <input class="btn btn-default" type="submit" value="Gravar" />
    </div>


</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
